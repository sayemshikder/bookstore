<div class="container">
	<div class="row">

		<div class="col-md-4">
			<h2 class="text-center">Books <%= link_to "New Book", new_book_path, class: "btn btn-primary btn-sm" %></h2>
			<table class="table">
		  <thead>
		    <tr>
		      <th></th>
		      <th>ID</th>
		      <th>Name</th>
		      <th>Available</th>
		    </tr>
		  </thead>
		  <tbody>
		  <% @books.each do |book| %>
		    <tr>
		      <td><%= book.id %></td>
		      <td><%= link_to book.name, book_path(book) %></td>
		      <td><%= book.availability %></td>
		      <td><%= link_to "edit", edit_book_path(book) %></td>
		    </tr>
		    <% end %>
		  </tbody>
		</table>
		</div>

		<div class="col-md-4">
			<h2 class="text-center">Purchased</h2>
		</div>

		<div class="col-md-4">
			<h2 class="text-center">Sold</h2>
		</div>

	</div>
</div>